{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Crab News",
  "version": "0.1.0",
  "identifier": "io.github.andreacfromtheapp.crab-news",
  "build": {
    "beforeDevCommand": "trunk serve",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "trunk build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "",
        "maximizable": true,
        "maximized": true,
        "maxHeight": 3840,
        "maxWidth": 2160,
        "minHeight": 820,
        "minWidth": 1180
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
